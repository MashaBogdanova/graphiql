{
  "name": "graphiql-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write ./**/*.{ts,tsx,css,scss,sass,json} --config ./.prettierrc.json",
    "prepare": "husky install",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "firebase": "^10.7.1",
    "next": "14.0.3",
    "normalize.css": "^8.0.1",
    "react": "^18",
    "react-dom": "^18",
    "react-firebase-hooks": "^5.1.1",
    "react-hook-form": "^7.49.2"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitest/coverage-v8": "^1.0.2",
    "@vitest/ui": "^1.0.2",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "typescript": "^5",
    "vitest": "^1.0.2"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "npm run format",
      "npm run lint"
    ],
    "**/*.{css,sass,scss,json}": [
      "npm run format"
    ]
  }
}
